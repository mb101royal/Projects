@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Home Page";
}
<section class="slider-area position-relative" id="home">
    <div class="slider-overlay">
        <div class="container">
            <div class="row ">
                <div class="col-lg-12 text-center text-area wow fadeInDown" data-wow-delay="1000ms">
                    <h5 class="subheading">Let us search your</h5>
                    <h2 class="heading">Dream Destination</h2>
                    <p class="text">Lorem ipsum is simply dummy text of the printing and typesetting. Lorem<br> Ipsum has been the industry’s standard dummy.  Lorem Ipsum has been the<br> industry’s standard dummy.</p>
                </div>
                <!-- </div> -->
            </div>
        </div>
        <!-- Container End -->
    </div>
    <div class="social-icons">
        <ul class="slider-social wow fadeInRight" data-wow-delay="1000ms">
            <li>
                <a class="icon-hover wow" href="#.">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </li>
            <li>
                <a class="icon-hover" href="#.">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>
            <li>
                <a class="icon-hover" href="#.">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </li>
            <li>
                <a class="icon-hover" href="#.">
                    <i class="fab fa-instagram"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="text-center slider-carousel owl-carousel owl-themes active">
        <div class="item active"><img src="~/img/slider-img1.jpg" alt="slider-img"></div>
        <div class="item"><img src="~/img/slider-img2.jpg" alt="slider-img"></div>
        <div class="item"><img src="~/img/slider-img3.jpg" alt="slider-img"></div>
        <div class="item"><img src="~/img/slider-img4.jpg" alt="slider-img"></div>
        <div class="item"><img src="~/img/slider-img5.jpg" alt="slider-img"></div>
        <!--             <div class="item active" style="background-image: url('travelling/img/slider-img1.jpg')"></div>
                    <div class="item" style="background-image: url('travelling/img/slider-img2.jpg')"></div>
                    <div class="item" style="background-image: url('travelling/img/slider-img3.jpg')"></div>
                    <div class="item" style="background-image: url('travelling/img/slider-img4.jpg')"></div>
                    <div class="item" style="background-image: url('travelling/img/slider-img5.jpg')"></div> -->
    </div>
</section>
<div class="slider-form">
    <div class="container">
        <div class="row">
            <div class="col-12 wow fadeInUp" data-wow-delay="1000ms">
                <form class="row contact-form rounded-pill link" id="form-data">
                    <div class="col-12 col-lg-9 d-inline-block d-lg-flex align-items-center">
                        <div class="form-group">
                            <label for="datepicker"> <span class="fas fa-calendar-plus " aria-hidden="true"></span></label>
                            <input type="text" name='datepicker' class="form-control" value="" id="datepicker"
                                   required="" placeholder="Check In">
                        </div>
                        <div class="form-group ">
                            <label for="datepickr"> <span class="fas fa-calendar-minus" aria-hidden="true"></span></label>
                            <input type="text" name='datepickr' class="form-control" value="" id="datepickr"
                                   required="" placeholder="Check Out">
                        </div>
                        <div class="form-group ">
                            <label><i class="fa fa-user mr-2" aria-hidden="true"></i></label>
                            <select id="inputStates" class="form-control">
                                <option class="red">Adults</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i class="fas fa-users mr-2" aria-hidden="true"></i></label>
                            <select id="inputState" class="form-control">
                                <option>Children</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i class="fas fa-map-marker " aria-hidden="true"></i></label>
                            <input type="text" name="Location" placeholder="Location" id="location" required="" class="form-control">
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 button-center">
                        <a href="javascript:void(0);" class="btn button btn-rounded green-btn btn-hvr-grey">
                            Search Destinations
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<section class="destination-section" id="destinations">
    <div class="container">
        <div class="row no-gutters row-1">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center wow fadeInDown" data-wow-delay="400ms">
                <h2 class="heading">Explore Our <br><span>Luxuries Destinations</span></h2>
                <p class="subheading">Lorem ipsum is simply dummy text </p>
            </div>
        </div>
        <div class="row  row-2">
            <!-- Row-2 Start -->
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-12 col-sm-12 destination wow fadeInDown" data-wow-delay="400ms">
                    <a class="card" href="#">
                        <img src="@item.ImageUrl" alt="destination-img">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title<span>$@item.Price</span></h5>
                            <div class="card-text">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fas fa-star-half-alt half-checked"></span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        <!-- Button Start -->
        <div class="button-center wow fadeInUp" data-wow-delay="400ms">
            <a class="btn button btn-rounded green-btn btn-hvr-blue " href="~/destinations.html">
                View All Similar Destinations
            </a>
        </div>
    </div>
    <!-- Container End -->
</section>