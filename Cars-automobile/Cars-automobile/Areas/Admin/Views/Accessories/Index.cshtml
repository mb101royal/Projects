@model IEnumerable<AccessoryDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Accessories</h1>

    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Accessories">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="images/@item.Image" style="width: 300px"/>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Accessories" asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Accessories" asp-route-id="@item.Id">Remove</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" scope="row">No data</td>
                </tr>
            }
            
        </tbody>
    </table>

</div>
<!-- /.container-fluid -->